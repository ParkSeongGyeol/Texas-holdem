[Unit]
Description=Texas Hold'em Poker Game Web Server
After=network.target

[Service]
User=root
WorkingDirectory=/root/poker_game
Environment="PYTHONPATH=/root/poker_game"
ExecStart=/root/poker_game/venv/bin/uvicorn src.web.app:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
